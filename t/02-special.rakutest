matches ⦃ dbref => ⦃ '$ref' => 'collection' ⦄ ⦄,
        '26000000036462726566001a0000000224726566000b000000636f6c6c656374696f6e000000';

matches ⦃ dbref => ⦃ '$ref' => 1, '$id' => BSON::Simple::ObjectID.new('58921b3e6e32ab156a22b59e') ⦄ ⦄,
